<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/btn_scheduling_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:text="@string/action_start_scheduling" />

    <SeekBar
        android:id="@+id/sb_training_interval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_scheduling_launcher"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_next_training_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sb_training_interval"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="14:00" />

    <Button
        android:id="@+id/btn_send_pending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_next_training_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Send Pending" />

    <Button
        android:id="@+id/btn_send_calling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_send_pending"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Send Calling" />
</RelativeLayout>